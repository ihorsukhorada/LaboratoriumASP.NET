@model Zaliczenie.Models.CustomerOrdersViewModel

@{
    ViewData["Title"] = "Customer Orders";
    var token = CancellationToken.None;
}

<div class="mb-3">
    <h3>Orders of @Model.FirstName @Model.LastName</h3>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.Data.GetAsyncEnumerator(token).Current.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Data.GetAsyncEnumerator(token).Current.OrderDate)
            </th>
        </tr>
    </thead>
    <tbody>
    @await foreach (var item in Model.Data.Data.WithCancellation(token))
    {
        <tr>
            <td>
                @item.OrderId
            </td>
            <td>
                @item.OrderDate
            </td>
        </tr>
    }
    </tbody>
</table>
<nav aria-label="Customer Orders page navigation"> 
    <ul class="pagination"> 
        @if (Model.Data.IsPrevious) 
        { 
            <li class="page-item">
                <a class="page-link" 
                   asp-controller="Customer" 
                   asp-action="CustomerOrders" 
                   asp-route-page="@(Model.Data.Page - 1)" 
                   asp-route-size="@Model.Data.Size">
                    Poprzednia
                </a>
            </li> 
        } 
        else 
        { 
            <li class="page-item disabled">
                <a class="page-link">Poprzednia</a>
            </li> 
        } 
        <li class="page-item disabled">
            <a class="page-link" >@Model.Data.Page</a>
        </li> 
        @if (Model.Data.IsNext) 
        { 
            <li class="page-item">
                <a class="page-link" 
                   asp-controller="Customer" 
                   asp-action="CustomerOrders" 
                   asp-route-page="@(Model.Data.Page + 1)" 
                   asp-route-size="@Model.Data.Size">
                    Następna
                </a>
            </li> 
        } 
        else 
        { 
            <li class="page-item disabled">
                <a class="page-link">Następna</a>
            </li> 
        } 
    </ul>
</nav>